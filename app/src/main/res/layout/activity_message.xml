<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".setting.MessageActivity">

    <cn.lsmya.library.PullLayout.PullLayout
        android:id="@+id/messagePullLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.lsmya.library.PullLayout.PullRecyclerView
            android:id="@+id/messageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </cn.lsmya.library.PullLayout.PullRecyclerView>
    </cn.lsmya.library.PullLayout.PullLayout>
    <ImageView
        android:id="@+id/messageNull"
        android:layout_width="@dimen/dp_150"
        android:layout_centerInParent="true"
        android:src="@drawable/null_data"
        android:layout_height="@dimen/dp_150" />
</RelativeLayout>