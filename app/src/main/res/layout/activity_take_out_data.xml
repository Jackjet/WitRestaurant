<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderData.TakeOutDataActivity">

    <cn.lsmya.library.PullLayout.PullLayout
        android:id="@+id/takeOut_pullLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.lsmya.library.PullLayout.PullScrollView
            android:id="@+id/takeOut_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background2"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/background2"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text="订单详情"
                    android:textColor="@color/orderTab"
                    android:textSize="@dimen/sp_15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单号"
                            android:textColor="@color/textColor2"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/takeOut_orderNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="middle"
                            android:gravity="right"
                            android:paddingRight="@dimen/dp_15"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/textColor2"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/viewColor" />

                    <cn.lsmya.restaurant.view.ListViewNoSlide
                        android:id="@+id/takeOut_orderFoods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null">

                    </cn.lsmya.restaurant.view.ListViewNoSlide>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品金额"
                            android:textColor="@color/textColor2"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/takeOut_orderMoney"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="@dimen/dp_15"
                            android:text=""
                            android:textColor="@color/textColor2"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/viewColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠金额"
                            android:textColor="@color/textColor2"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/takeOut_orderOnSale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="@dimen/dp_15"
                            android:text=""
                            android:textColor="@color/textColor2"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/viewColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical|right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实付款："
                            android:textColor="@color/textColor2"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:id="@+id/takeOut_orderPayMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingRight="@dimen/dp_15"
                            android:text=""
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/viewColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/background2"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text="配送信息"
                    android:textColor="@color/orderTab"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/viewColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话："
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/takeOut_orderPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:paddingRight="@dimen/dp_15"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/sp_16" />

                    <Button
                        android:id="@+id/takeOut_orderPhoneClick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/shape_green_8"
                        android:text="电话确认"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/viewColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center"
                        android:text="配送地址："
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/sp_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/takeOut_orderName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_45"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/dp_15"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/orderTab"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/takeOut_orderAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/dp_45"
                            android:paddingRight="@dimen/dp_15"
                            android:textColor="@color/orderTab"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/viewColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="@dimen/dp_45"
                    android:paddingLeft="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="买家留言："
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/takeOut_orderMsg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/dp_15"
                        android:text=""
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/viewColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@color/background2"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text="支付信息"
                    android:textColor="@color/orderTab"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/viewColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单时间："
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/takeOut_orderPayData"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:paddingRight="@dimen/dp_15"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/textColor2"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/viewColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:background="@color/background2" />
            </LinearLayout>
        </cn.lsmya.library.PullLayout.PullScrollView>
    </cn.lsmya.library.PullLayout.PullLayout>
</RelativeLayout>