<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background2"
    android:paddingBottom="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_8"
                    android:text="收 货 人："
                    android:textColor="@color/tabSelect"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_8"
                    android:text="收货地址："
                    android:textColor="@color/tabSelect"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_8"
                    android:text="本单收入："
                    android:textColor="@color/tabSelect"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_8"
                    android:text="下单时间："
                    android:textColor="@color/tabSelect"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_8"
                    android:text="卖家留言："
                    android:textColor="@color/tabSelect"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemTakeOutList_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:paddingTop="@dimen/dp_8"
                    android:singleLine="true"
                    android:text="小仙女"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/itemTakeOutList_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:paddingTop="@dimen/dp_8"
                    android:singleLine="true"
                    android:text="济南高新万达"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/itemTakeOutList_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:paddingTop="@dimen/dp_8"
                    android:singleLine="true"
                    android:text="¥100.00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/itemTakeOutList_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:paddingTop="@dimen/dp_8"
                    android:singleLine="true"
                    android:text="2018-7-26 9:52:04"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/itemTakeOutList_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_8"
                    android:text="无"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/background2" />

        <Button
            android:id="@+id/itemTakeOutList_todoClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@drawable/shape_green_8"
            android:text="立即派送"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:visibility="gone" />

        <Button
            android:id="@+id/itemTakeOutList_doingClick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@drawable/shape_red_8"
            android:text="派送完成"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>